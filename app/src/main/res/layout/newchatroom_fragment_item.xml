<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/left_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/left_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:background="#30acb0b4"
            android:paddingBottom="1dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="1dp"
            android:textSize="13sp"
            android:text="2018"/>

        <com.example.liqingfeng.sscapp.View.CustomView.CircleImageView
            android:id="@+id/left_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/left_date"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_basktball"/>

        <TextView
            android:id="@+id/left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/left_image"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/left_image"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="123"/>

        <TextView
            android:id="@+id/left_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_name"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/left_image"
            android:background="@drawable/message_left"
            android:gravity="center_vertical"
            android:text="叶"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

    <com.example.liqingfeng.sscapp.View.CustomView.CircleImageView
        android:id="@+id/right_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_basktball" />

    <LinearLayout
        android:layout_alignRight="@+id/right_image"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_myAvatar"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@id/iv_myAvatar"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/message_right"
            android:gravity="center_vertical"
            android:text="叶应"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    </RelativeLayout>


</LinearLayout>
