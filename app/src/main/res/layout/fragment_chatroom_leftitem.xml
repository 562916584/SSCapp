<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tv_friendMsgSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:background="#30acb0b4"
        android:paddingBottom="1dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="1dp"
        android:textSize="13sp"
        android:visibility="gone" />

    <com.example.liqingfeng.sscapp.View.CustomView.CircleImageView
        android:id="@+id/iv_friendAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_friendMsgSendTime"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_basktball"/>

    <TextView
        android:id="@+id/tv_friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_friendAvatar"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/iv_friendAvatar"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_friend_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_friendName"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_friendAvatar"
        android:background="@drawable/message_left"
        android:gravity="center_vertical"
        android:text="叶"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>